@model POS.Repository.CustomerEntity

@{
    ViewData["Title"] = "Customer Detail";
}

<h2>Category Detail</h2>
<table class="table tab-content">
    <tbody>
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>CompanyName</th>
            <td>@Model.CompanyName</td>
        </tr>
        <tr>
            <th>ContactName</th>
            <td>@Model.ContactName</td>
        </tr>
        <tr>
            <th>ContactTitle</th>
            <td>@Model.ContactTitle</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Region</th>
            <td>@Model.Region</td>
        </tr>
        <tr>
            <th>PostalCode</th>
            <td>@Model.PostalCode</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>@Model.Country</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>Fax</th>
            <td>@Model.Fax</td>
        </tr>
    </tbody>
</table>
<button asp-action="List" class="btn btn-sm btn-danger">Back</button>